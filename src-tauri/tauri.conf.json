{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Stosufy",
	"version": "0.1.6",
	"identifier": "com.Stosufy.app",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:2021",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../build"
	},
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": ["stosufynew"]
			}
		},
		"updater": {
			"windows": {
				"installerType": "nsis"
			},
			"active": true,
			"endpoints": ["https://github.com/Stamer-d/Stosufy/releases/latest/download/latest.json"],
			"pubkey": ""
		}
	},
	"app": {
		"windows": [
			{
				"decorations": false,
				"title": "Stosufy",
				"width": 800,
				"height": 600,
				"minHeight": 600,
				"minWidth": 800
			}
		],
		"security": {
			"csp": null
		}
	},

	"bundle": {
		"createUpdaterArtifacts": true,
		"active": true,
		"targets": "all",

		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
